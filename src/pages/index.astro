<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portfolio</title>

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      height: 100vh;
      background: radial-gradient(circle at top, #0a2a3f, #020b12 70%);
      font-family: system-ui, 'Segoe UI', sans-serif;
      color: #e6f7ff;
      overflow: hidden;
    }

    .ocean-glow {
      position: absolute;
      inset: 0;
      background:
        linear-gradient(120deg, transparent 40%, rgba(0,180,255,0.12)),
        linear-gradient(-120deg, transparent 40%, rgba(180,200,220,0.08));
      filter: blur(70px);
      z-index: 0;
    }

    .wrapper {
      position: relative;
      z-index: 1;
      height: 100vh;
      display: grid;
      grid-template-rows: auto 1fr auto;
      padding: 48px;
    }

    .brand {
      font-size: 0.9rem;
      letter-spacing: 4px;
      color: #bfc7ce;
      text-transform: uppercase;
    }

    .hero {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .hero h1 {
      font-size: clamp(3rem, 6vw, 5rem);
      letter-spacing: 6px;
      text-transform: uppercase;
      background: linear-gradient(90deg, #dfe6eb, #ffffff, #9fdcff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow:
        0 0 10px rgba(180,220,255,0.4),
        0 0 30px rgba(0,160,255,0.4);
    }

    .hero p {
      margin-top: 10px;
      font-size: 1.1rem;
      color: #b8e9ff;
      opacity: 0.85;
    }

    /* SOCIAL ICONS */
    .socials {
      display: flex;
      gap: 28px;
      margin: 32px 0 12px;
    }

    .socials a {
      width: 42px;
      height: 42px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(200,220,235,0.4);
      border-radius: 50%;
      color: #e8f7ff;
      transition: all .3s ease;
    }

    .socials a:hover {
      transform: translateY(-4px);
      box-shadow: 0 0 18px rgba(180,220,255,0.5);
      border-color: #ffffff;
    }

    .socials svg {
      width: 20px;
      height: 20px;
      fill: currentColor;
    }

    .info {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
      margin-top: 32px;
    }

    .card {
      background: rgba(5, 20, 30, 0.65);
      border: 1px solid rgba(200,220,235,0.4);
      border-radius: 12px;
      padding: 24px;
      backdrop-filter: blur(10px);
      transition: all .3s ease;
    }

    .card:hover {
      transform: translateY(-6px);
      border-color: #e8f7ff;
      box-shadow:
        0 0 18px rgba(180,220,255,0.4),
        inset 0 0 12px rgba(255,255,255,0.08);
    }

    .card span {
      font-size: 0.7rem;
      letter-spacing: 3px;
      color: #cfd8de;
    }

    .card h2 {
      margin: 10px 0;
      font-size: 1.4rem;
      color: #f4fbff;
    }

    .card p {
      font-size: 0.95rem;
      line-height: 1.6;
      color: #cfefff;
    }

    .footer {
      text-align: right;
      font-size: 0.75rem;
      color: #aab6bf;
      opacity: 0.6;
    }

    @media (max-width: 900px) {
      .info { grid-template-columns: 1fr; }
      body { overflow-y: auto; }
    }
  </style>
</head>

